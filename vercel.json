{
  "version": 2,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.py",   "use": "@vercel/python" }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1.py"
    },
    {
      "src": "^/app$",
      "dest": "/app.html"
    },
    {
      "src": "^/index\\.html$",
      "dest": "/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "installCommand": "echo \"Skipping Python dependencies install\"",
